<div class="user-form-container">
    <%= form_for(@user) do |f| %>
        <%= f.label :username, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :username, class: "form-control-plaintext"%> <br>
        <%= f.label :first_name, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :first_name, class: "form-control-plaintext" %> <br>
        <%= f.label :last_name, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :last_name, class: "form-control-plaintext" %> <br>
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, class: "form-control-plaintext" %>
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control-plaintext" %>
        <%= f.submit "Submit", class: "btn btn-primary"%>
    <% end %>
</div> 