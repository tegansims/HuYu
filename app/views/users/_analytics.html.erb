<h4>Leaderboard</h4>
<div class='analytics'>
<table class="table table-hover table-dark">
  <thead class="table-active">
    <tr>
      <th scope="col"> Username </th>
      <th scope="col"> Games Played </th>
      <th scope="col"> Games Won </th>
      <th scope="col"> Percentage Won </th>
    </tr>
  </thead>
  <tbody>
    <% User.winners.each do |user| %> 
      <tr>
        <td> <%= user.username %></td>
        <td> <%= user.games_played.count %></td>
        <td> <%= user.games_won %> </td>
        <td> <%= user.percentage_won.round(2) %>% </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>